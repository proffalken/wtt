<div metal:use-macro="layout">
    <div metal:fill-slot="content">
        <p>Please use the form below to create a new timingload:</p>
        <form class="form-horizontal" action="/timingload/create" method="post">
            <div class="control-group">
                <label class="control-label" for="name">Name</label>
                <div class="controls">
                    <input type="text" id="name" placeholder="Timing Load Name" name="name">
                </div>
            </div>
            <div class="control-group">
                <label class="control-label" for="description">Description</label>
                <div class="controls">
                    <input type="text" id="description" name="description">
                </div>
            </div>
            <div class="control-group">
                <div class="controls">
                    <button type="submit" name='form.submitted' class="btn">Create the Timing Load</button>
                </div>
            </div>
        </form>
    </div>
</div>

